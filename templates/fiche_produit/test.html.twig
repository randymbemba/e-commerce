{% extends 'base.html.twig' %}

{% block title %}Hello FicheProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main role="main" class="container">
    <div class="example-wrapper">
        <h1 style="position: relative; left: 35%">Fiche du produit</h1>
        {% for produit in produits %}
            <div class="container mt-5 mb-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-10">
                        <div class="card">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="images p-3">
                                        <div class="text-center p-4"> <img id="main-image" src="{{asset('images/php5E9B.tmp')}}" width="250" /> </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="product p-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i></div> <i class="fa fa-shopping-cart text-muted"></i>
                                        </div>
                                        <div class="mt-4 mb-3">
                                            <h5 class="text-uppercase">{{produit.nom}}</h5>
                                            <div class="price d-flex flex-row align-items-center"> <span class="act-price">{{produit.prix}}€</span>
                                                
                                            </div>
                                        </div>
                                        <p class="about">{{produit.description}}</p>
                                        <div class="size mt-5">
                                            <h6 class="text-uppercase">Quantitées</h6> <label class="radio"> <input type="radio" name="stock" value={{produit.stock}} checked> <span>{{produit.stock}}</span> 
                                        </div>
                                        <div class="cart mt-4 align-items-center"> <button class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</button> <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</main>
{% endblock %}
